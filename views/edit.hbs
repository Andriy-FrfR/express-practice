<h1>Изменить курс {{course.title}}</h1>

<form action="/courses/{{course.id}}/edit" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
    <span class="helper-text" data-error="Введите название"></span>
    <label for="title">Название курса</label>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" required min="1" value="{{course.price}}">
    <span class="helper-text" data-error="Введите цену"></span>
    <label for="price">Цена за курс</label>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
    <span class="helper-text" data-error="Введите цену"></span>
    <label for="img">Ссылка на картинку</label>
  </div>

  <input type="hidden" name="_csrf" value="{{ csrf }}">
  <button type="submit" class="btn btn-primary">Изменить</button>
</form>

<form action="/courses/{{course.id}}/remove" method="POST">
  <input type="hidden" name="_csrf" value="{{ csrf }}">
  <button class="btn red remove-btn">Удалить курс</button>
</form>